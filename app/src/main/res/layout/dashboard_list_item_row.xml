<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/dashboard_card_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Card Ttile"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />

    <ImageView
        android:id="@+id/share_card"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/share"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />

    <ImageView
        android:id="@+id/delete_card"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/delete"
        app:layout_constraintEnd_toStartOf="@id/share_card"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />

    <TextView
        android:id="@+id/received_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received on 12.12.2020"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/card_title"
        app:layout_constraintTop_toBottomOf="@+id/card_title" />


</androidx.constraintlayout.widget.ConstraintLayout>